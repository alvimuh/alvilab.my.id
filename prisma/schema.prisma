generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type BookmarksVisitor {
  datetime DateTime @db.Date
  ip       String
}

model Bookmarks {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  description String
  is_pinned   Boolean?
  link        String
  slug        String
  title       String
  type        String
  /// Multiple data types found: Array(String): 29.2%, Array(BookmarksVisitor): 70.8% out of 24 sampled entries
  visitor     Json[]
}

model Resources {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  categories String[]
  link       String
  slug       String?
  tags       String[]
  title      String
  type       String
}

model Article {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  content     String
  publishedAt DateTime
  subArticles SubArticle[]
}

model SubArticle {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  content     String
  part        Int
  parentId    String   @map("article_id") @db.ObjectId
  article     Article  @relation(fields: [parentId], references: [id])
  publishedAt DateTime
}
